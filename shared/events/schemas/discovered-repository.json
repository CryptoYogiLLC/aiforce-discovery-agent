{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://aiforce-discovery-agent/schemas/discovered-repository.json",
  "title": "Repository Discovered Event",
  "description": "Event emitted when a code repository is analyzed",
  "allOf": [{ "$ref": "cloudevent-base.json" }],
  "properties": {
    "type": {
      "const": "discovery.repository.discovered"
    },
    "source": {
      "const": "/collectors/code-analyzer"
    },
    "data": {
      "type": "object",
      "required": ["analysis_id", "repository_url", "discovered_at"],
      "properties": {
        "analysis_id": {
          "type": "string",
          "format": "uuid",
          "description": "Unique identifier for this analysis"
        },
        "repository_url": {
          "type": "string",
          "format": "uri",
          "description": "URL of the analyzed repository"
        },
        "branch": {
          "type": "string",
          "description": "Branch that was analyzed"
        },
        "languages": {
          "type": "object",
          "description": "Map of language name to statistics",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "lines": { "type": "integer" },
              "files": { "type": "integer" },
              "percentage": { "type": "number" }
            }
          }
        },
        "frameworks": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name"],
            "properties": {
              "name": { "type": "string" },
              "version": { "type": "string" },
              "category": {
                "type": "string",
                "enum": ["web", "api", "orm", "testing", "build", "other"]
              },
              "confidence": {
                "type": "number",
                "minimum": 0,
                "maximum": 1
              }
            }
          }
        },
        "application_type": {
          "type": "string",
          "enum": [
            "web_application",
            "api_service",
            "batch_job",
            "cli_tool",
            "library",
            "mobile_app",
            "desktop_app",
            "unknown"
          ],
          "description": "Classified application type (Phase 1)"
        },
        "architecture_pattern": {
          "type": "string",
          "enum": [
            "monolith",
            "microservice",
            "serverless",
            "event_driven",
            "layered",
            "modular_monolith",
            "unknown"
          ],
          "description": "Detected architecture pattern (Phase 1)"
        },
        "discovered_at": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp when repository was analyzed"
        }
      }
    }
  }
}
