{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://aiforce-discovery-agent/schemas/discovered-service.json",
  "title": "Service Discovered Event",
  "description": "Event emitted when a service is discovered on a port",
  "allOf": [{ "$ref": "cloudevent-base.json" }],
  "properties": {
    "type": {
      "const": "discovery.service.discovered"
    },
    "source": {
      "const": "/collectors/network-scanner"
    },
    "data": {
      "type": "object",
      "required": ["service_id", "ip", "port", "protocol"],
      "properties": {
        "service_id": {
          "type": "string",
          "format": "uuid",
          "description": "Unique identifier for this service discovery"
        },
        "server_id": {
          "type": "string",
          "format": "uuid",
          "description": "Reference to parent server discovery"
        },
        "ip": {
          "type": "string",
          "format": "ipv4",
          "description": "IP address where service was discovered"
        },
        "port": {
          "type": "integer",
          "minimum": 1,
          "maximum": 65535,
          "description": "Port number"
        },
        "protocol": {
          "type": "string",
          "enum": ["tcp", "udp"],
          "description": "Protocol"
        },
        "service": {
          "type": "string",
          "description": "Detected service name (e.g., http, ssh, mysql)"
        },
        "version": {
          "type": "string",
          "description": "Detected service version"
        },
        "banner": {
          "type": "string",
          "description": "Service banner captured during fingerprinting"
        },
        "metadata": {
          "type": "object",
          "description": "Additional service metadata including database candidate flags (ADR-007)",
          "properties": {
            "database_candidate": {
              "type": "boolean",
              "description": "True if this service is a potential database"
            },
            "candidate_type": {
              "type": "string",
              "enum": [
                "mysql",
                "postgresql",
                "mongodb",
                "redis",
                "mssql",
                "oracle",
                "elasticsearch",
                "couchdb",
                "cassandra"
              ],
              "description": "Type of database if candidate"
            },
            "candidate_confidence": {
              "type": "number",
              "minimum": 0,
              "maximum": 1,
              "description": "Confidence level: 0.5 (port_only), 0.85 (port_and_banner)"
            },
            "candidate_reason": {
              "type": "string",
              "description": "Reason for candidate classification"
            }
          }
        }
      }
    }
  }
}
