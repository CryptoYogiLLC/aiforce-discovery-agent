{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://aiforce-discovery-agent/schemas/cloudevent-base.json",
  "title": "CloudEvent Base Schema",
  "description": "Base schema for all CloudEvents in the Discovery Agent",
  "type": "object",
  "required": ["specversion", "type", "source", "id"],
  "properties": {
    "specversion": {
      "type": "string",
      "const": "1.0",
      "description": "CloudEvents specification version"
    },
    "type": {
      "type": "string",
      "pattern": "^discovery\\.[a-z][a-z0-9]*\\.(discovered|enriched|redacted|scored|approved|rejected|failed)$",
      "description": "Event type in format: discovery.<entity>.<verb>. Entity must start with lowercase letter, may contain lowercase letters and digits (no underscores - use 'ec2instance' not 'ec2_instance'). Verb must be: discovered|enriched|redacted|scored|approved|rejected|failed"
    },
    "source": {
      "type": "string",
      "format": "uri-reference",
      "description": "Source of the event (service identifier)"
    },
    "id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique event identifier"
    },
    "time": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp when the event occurred"
    },
    "datacontenttype": {
      "type": "string",
      "default": "application/json",
      "description": "Content type of the data field"
    },
    "subject": {
      "type": "string",
      "description": "Subject of the event (optional context)"
    },
    "data": {
      "type": "object",
      "description": "Event payload"
    }
  }
}
